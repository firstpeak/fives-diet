---
import "../styles/global.css";
export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "The Fives Diet by Dread Pirate Robertson - Exclusive 5-Week Protocol",
  description = "The exclusive Fives Diet created by Dread Pirate Robertson. Five days a week, up to five hundred calories per day. Complete 5-week cycles, repeatable annually."
} = Astro.props;
---

<html lang="en" class="bg-white text-black dark:bg-black dark:text-white">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://dreadpiraterobertson.com/" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://dreadpiraterobertson.com/" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/fives-diet-logo.svg" />
    
    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    

  </head>
  <body class="font-sans min-h-screen flex flex-col items-center p-6">
        <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-BRVGJT9V3W"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-BRVGJT9V3W');
    </script>
    <slot />
  </body>
</html>